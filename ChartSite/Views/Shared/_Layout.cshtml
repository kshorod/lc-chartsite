<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ChartSite - Learn &amp; Code</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstraptemplate.css?_=@(DateTime.Now.Ticks)" rel="stylesheet" />
    <link href="~/Content/prism.css" rel="stylesheet" />
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Learn &amp; Code</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="@IsActive("Index")"><a href="@Url.Action("Index","Home")">Kolory</a></li>
                <li class="@IsActive("Lifespan")"><a href="@Url.Action("Lifespan", "Home")">Długość Życia</a></li>
                <li class="@IsActive("Weather")"><a href="@Url.Action("Weather", "Home")">Pogoda</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">

    <div class="starter-template">

        @RenderBody()

    </div>
</div>
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/prism.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js"></script>
<script type="text/javascript" src="~/Scripts/Charts.config.js?_=@(DateTime.Now.Ticks)"></script>
@RenderSection("Scripts", false)
</body>
</html>

@functions
{
    string IsActive(string action)
    {
        var currentAction = ViewContext.RouteData.GetRequiredString("action");
        if (currentAction.Equals(action, StringComparison.InvariantCultureIgnoreCase)) return "active";
        return "";
    }
    

}

